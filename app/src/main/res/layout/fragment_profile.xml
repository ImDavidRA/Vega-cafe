<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-50dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/top_background"
                    app:tint="@color/green" />

                <ImageView
                    android:id="@+id/userPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-121dp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView9"
                    app:layout_constraintStart_toStartOf="@id/imageView9"
                    app:layout_constraintTop_toBottomOf="@id/imageView9"
                    app:srcCompat="@drawable/user_pic" />

                <TextView
                    android:id="@+id/name_firstnameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nombre Apellido"
                    android:textColor="@color/blue"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/userPic"
                    app:layout_constraintStart_toStartOf="@+id/userPic"
                    app:layout_constraintTop_toBottomOf="@id/userPic"

                    />

                <TextView
                    android:id="@+id/emailTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@gmail.com"
                    android:textSize="20sp"
                    android:textColor="@color/blue"
                    app:layout_constraintEnd_toEndOf="@+id/name_firstnameTxt"
                    app:layout_constraintStart_toStartOf="@+id/name_firstnameTxt"
                    app:layout_constraintTop_toBottomOf="@+id/name_firstnameTxt" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/emailTxt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"

                            >

                            <Button
                                android:id="@+id/o1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:backgroundTint="#4638C0"
                                android:drawableTint="@color/white"
                                android:elevation="3dp"
                                android:ems="10"
                                android:text="Editar Perfil"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible"


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="-51dp"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:id="@+id/dibujo1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="220dp"
                                app:srcCompat="@drawable/baseline_create_24"
                                tools:srcCompat="@drawable/baseline_create_24" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/o2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:backgroundTint="#FFCB2B"
                                android:drawableTint="@color/white"
                                android:elevation="3dp"
                                android:ems="10"
                                android:text="Contraseña"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible"


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="-51dp"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:id="@+id/dibujo2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="220dp"
                                app:srcCompat="@drawable/baseline_key_48"
                                tools:srcCompat="@drawable/baseline_key_48" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/o3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:backgroundTint="#598D55"
                                android:drawableTint="@color/white"
                                android:elevation="3dp"
                                android:ems="10"
                                android:text="Idioma"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible"


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="-51dp"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:id="@+id/dibujo3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="220dp"
                                app:srcCompat="@drawable/baseline_language_24"
                                tools:srcCompat="@drawable/baseline_language_24" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/stockControl"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginStart="32dp"
                                android:layout_marginEnd="32dp"
                                android:backgroundTint="@color/red"
                                android:drawableTint="@color/white"
                                android:elevation="3dp"
                                android:ems="10"
                                android:text="Control de Stocks"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible"


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="-51dp"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="220dp"
                                app:srcCompat="@drawable/baseline_warehouse_48"
                                tools:srcCompat="@drawable/baseline_warehouse_48" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/logTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:text="Versión BETA"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>